@require "map-colors"

#map_container
    width 100%
    height 550px
    background-color color-streets

#map_nav
    margin 10px 15px
    button
        display inline-block
        background-color color-land
        color color-water
        border-color color-water
        font-size 12px
        font-weight bold
    button:hover
        border-color darken(color-areas, 25%)
    button.active
        border-color darken(color-areas, 25%)